<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <ImageView
        android:id="@+id/finRecBtnBckgrnd"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/home_page_finance_btn_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/finRecBtnBckgrnd"
        app:layout_constraintStart_toStartOf="@id/finRecBtnBckgrnd"
        app:layout_constraintEnd_toEndOf="@id/finRecBtnBckgrnd"
        android:layout_marginTop="10dp"
        android:text="Account"
        android:textSize="23sp"
        android:textStyle="bold"
        android:textColor="@color/colorBlackHome"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/finRecBtnBckgrnd"
        app:layout_constraintBottom_toBottomOf="@id/finRecBtnBckgrnd"
        app:layout_constraintStart_toStartOf="@id/finRecBtnBckgrnd"
        app:layout_constraintEnd_toEndOf="@id/finRecBtnBckgrnd"
        android:text="1"
        android:textSize="50sp"
        android:textStyle="bold"
        android:textColor="@color/colorBlackHome"/>


</androidx.constraintlayout.widget.ConstraintLayout>